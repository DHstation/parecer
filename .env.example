# ==================================================
# CONFIGURAÇÃO DO SISTEMA PARECER
# ==================================================
# IMPORTANTE: Copie este arquivo para .env e altere os valores!
# cp .env.example .env

# --------------------------------------------------
# SEGURANÇA (ALTERE EM PRODUÇÃO!)
# --------------------------------------------------
JWT_SECRET=parecer_jwt_secret_super_seguro_2024_CHANGE_THIS_IN_PRODUCTION

# --------------------------------------------------
# MONGODB
# --------------------------------------------------
MONGODB_USER=admin
MONGODB_PASSWORD=parecer_admin_2024_CHANGE_THIS
MONGODB_DATABASE=parecer_db
# URI completa (usado quando não usar Docker Compose)
MONGODB_URI=mongodb://admin:parecer_admin_2024@localhost:27017/parecer_db?authSource=admin

# --------------------------------------------------
# MINIO (Armazenamento de arquivos)
# --------------------------------------------------
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=minio_admin_2024_CHANGE_THIS
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false

# --------------------------------------------------
# REDIS (Cache e Filas)
# --------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
# Deixe vazio para sem senha (NÃO recomendado em produção)
REDIS_PASSWORD=

# --------------------------------------------------
# MISTRAL AI / OCR
# --------------------------------------------------
# Opção 1: Usar Mistral local via vLLM (GPU necessária)
MISTRAL_API_URL=http://localhost:8000/v1
HUGGING_FACE_TOKEN=your_huggingface_token_here

# Opção 2: Usar API da Mistral na nuvem
# MISTRAL_API_KEY=your_mistral_api_key_here
# MISTRAL_API_URL=https://api.mistral.ai/v1

# --------------------------------------------------
# BACKEND
# --------------------------------------------------
PORT=3001
NODE_ENV=development

# Workers (processamento assíncrono)
ENABLE_WORKERS=true

# Auto-reindexar documentos ao iniciar (pode ser lento com muitos docs)
AUTO_REINDEX_ON_STARTUP=false

# RAG - usar embeddings simples (TF-IDF) - mais leve e rápido
USE_SIMPLE_EMBEDDINGS=true

# --------------------------------------------------
# FRONTEND
# --------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:3001

# --------------------------------------------------
# DOCKER COMPOSE
# --------------------------------------------------
# Use 'production' quando implantar
# NODE_ENV=production
